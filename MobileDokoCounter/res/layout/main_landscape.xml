<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/table_main"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:stretchColumns="1">

    <TableRow android:layout_weight="1.0"
              android:layout_height="fill_parent">

        <de.dengot.dokocounter.SVGImageButton android:id="@+id/button_king" android:src="@raw/card_club_10"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_gravity="center"
                     android:scaleType="fitXY"
                />

        <de.dengot.dokocounter.SVGImageButton android:id="@+id/button_queen" android:src="@raw/card_club_10"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_gravity="center"
                     android:scaleType="fitStart"
                />

        <de.dengot.dokocounter.SVGImageButton android:id="@+id/button_jack" android:src="@raw/card_club_10"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_gravity="center"
                     android:scaleType="fitCenter"
                />
    </TableRow>

    <TableRow android:layout_weight="1.0"
              android:layout_height="fill_parent">

        <de.dengot.dokocounter.SVGImageButton android:id="@+id/button_ace" android:src="@raw/card_club_10"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_gravity="center"
                     android:scaleType="center"
                />

        <de.dengot.dokocounter.SVGImageButton android:id="@+id/button_num10" android:src="@raw/card_club_10"
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:layout_gravity="center"
                     android:scaleType="centerInside"
                />

        <Button android:id="@+id/button_reset"
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                />
    </TableRow>

